{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Captions",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "slug",
          "text",
          "platforms"
        ],
        "properties": {
          "slug": {
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$"
          },
          "text": {
            "type": "string",
            "minLength": 3
          },
          "platforms": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": [
                "tiktok",
                "instagram",
                "facebook",
                "linkedin",
                "youtube"
              ]
            }
          },
          "hashtags": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "items"
  ]
}