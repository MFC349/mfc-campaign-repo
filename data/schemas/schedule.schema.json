{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Schedule",
  "type": "object",
  "properties": {
    "timezone": {
      "type": "string"
    },
    "posts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "date",
          "time",
          "slug",
          "platform"
        ],
        "properties": {
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "time": {
            "type": "string",
            "pattern": "^\\d{2}:\\d{2}$"
          },
          "slug": {
            "type": "string"
          },
          "platform": {
            "type": "string",
            "enum": [
              "tiktok",
              "instagram",
              "facebook",
              "linkedin",
              "youtube"
            ]
          }
        }
      }
    }
  },
  "required": [
    "timezone",
    "posts"
  ]
}